    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "tags": [
    {
      "name": "User Request",
      "description": "API requests pertaining the user."
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "User Request"
        ],
        "summary": "Returns all users in database.",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref":"#/components/schemas/user"
            }
          }
        }
      },
      "post": {
        "tags": [
          "User Request"
        ],
        "summary": "Creates a user.",
        "requestBody": {
          "description": "User Post Request",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/components/schemas/user"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/userResponse"
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "username":{
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "userResponse":{
        "type": "object",
        "properties": {
          "user": {
            "type": "string"
          },
          "message":{
            "type":"string"
          }
        }
      },
      "category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "package": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "carrier": {
            "type": "string"
          },
          "tracking_number": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "creation_date": {
            "type": "date"
          },
          "package_status": {
            "type": "string"
          },
          "UUID": {
            "type": "string"
          }
        }
      }
    }
  }
}